<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/MCardMargin_16dp"
        android:layout_marginTop="@dimen/MCardMargin_16dp"
        android:layout_marginEnd="@dimen/MCardMargin_16dp"
        app:cardBackgroundColor="@color/color_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/example"
        app:strokeWidth="@dimen/MCard_Stroke_1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewEight"
                android:layout_width="@dimen/FAA_Image_24dp"
                android:layout_height="@dimen/FAA_Image_24dp"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/MCardMargin__8dp"
                android:layout_marginBottom="@dimen/MCardMargin_16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_log_out"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewFirst" />

            <ImageView
                android:id="@+id/imageViewFirst"
                android:layout_width="@dimen/FAA_Image_24dp"
                android:layout_height="@dimen/FAA_Image_24dp"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/MCardMargin_16dp"
                android:layout_marginBottom="@dimen/MCardMargin_16dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/enter_exit"
                style="@style/SettingsFragmentTextStyle"
                android:layout_width="@dimen/Ops_0dp"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:contentDescription="@string/enter_exit"
                android:text="@string/enter_exit"
                android:textColor="@color/pastel_hot_pink"
                android:textSize="@dimen/MCard_Text_16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewEight"
                app:layout_constraintStart_toEndOf="@+id/imageViewEight"
                app:layout_constraintTop_toTopOf="@+id/imageViewEight"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/welcome_text"
                style="@style/SettingsFragmentTextStyle"
                android:layout_width="@dimen/Ops_0dp"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/Ops_0dp"
                android:contentDescription="@string/enter_exit"
                android:text="@string/welcome_text_settings"
                android:textColor="@color/example_middle"
                android:textSize="@dimen/MCard_Text_16sp"
                app:layout_constraintStart_toEndOf="@+id/imageViewFirst"
                app:layout_constraintTop_toTopOf="@+id/imageViewFirst" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>