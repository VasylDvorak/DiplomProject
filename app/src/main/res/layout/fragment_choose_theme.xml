<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:id="@+id/first_theme"
        style="@style/SettingsFragmentTextStyle"
        android:contentDescription="@string/first_theme"
        android:text="@string/first_theme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/second_theme"
        style="@style/SettingsFragmentTextStyle"
        android:contentDescription="@string/second_theme"
        android:text="@string/second_theme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_theme" />

</androidx.constraintlayout.widget.ConstraintLayout>