<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/example_back"
    tools:context=".view.root.favorite.FavoritesElementFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/MCardMargin_16dp"
        android:layout_marginTop="@dimen/MCardMargin_16dp"
        android:layout_marginEnd="@dimen/MCardMargin_16dp"
        android:layout_marginBottom="@dimen/MCardMargin_16dp"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/MCard_Radius_15dp"
        app:cardElevation="@dimen/MCard_Elevation_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/example"
        app:strokeWidth="@dimen/MCard_Stroke_1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewDictionaryFavorite"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/MCardMargin_24dp"
                android:backgroundTint="@color/color_white"
                android:padding="@dimen/MCardMargin_16dp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="@dimen/MCard_Radius_15dp"
                app:cardElevation="@dimen/MCard_Elevarion_5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_marginBaseline="@dimen/MCardMargin_16dp"
                app:strokeColor="@color/example"
                app:strokeWidth="@dimen/MCard_Stroke_1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/MCardMargin__8dp"
                        android:layout_marginEnd="@dimen/MCardMargin_16dp"
                        android:src="@drawable/baseline_favorite_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageViewDictionary"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="@dimen/MCardMargin_16dp"
                        android:layout_marginTop="@dimen/MCardMargin__8dp"
                        android:layout_marginEnd="@dimen/MCardMargin_16dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/book_lite"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dictionary_button"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="@dimen/Ops_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/MCardMargin_16dp"
                        android:layout_marginTop="@dimen/MCardMargin__8dp"
                        android:layout_marginEnd="@dimen/MCardMargin_16dp"
                        android:layout_marginBottom="@dimen/MCardMargin_16dp"
                        android:clickable="false"
                        android:contentDescription="@string/favorites_dictionary"
                        android:text="@string/favorites_dictionary"
                        android:textColor="@color/example_middle"
                        android:textSize="@dimen/default_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewDictionary"
                        app:layout_constraintVertical_bias="1.0"
                        app:strokeColor="@color/color_white"
                        app:strokeWidth="@dimen/MCard_Stroke_1dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewLearningFavorite"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/MCardMargin__8dp"
                android:layout_marginTop="@dimen/MCardMargin_16dp"
                android:layout_marginEnd="@dimen/MCardMargin__8dp"
                android:layout_marginBottom="@dimen/MCardMargin_16dp"
                android:backgroundTint="@color/color_white"
                android:visibility="visible"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="@dimen/MCard_Radius_15dp"
                app:cardElevation="@dimen/MCard_Elevarion_5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewDictionaryFavorite"
                app:strokeColor="@color/example"
                app:strokeWidth="@dimen/MCard_Stroke_1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/MCardMargin__8dp"
                        android:layout_marginEnd="@dimen/MCardMargin_16dp"
                        android:src="@drawable/baseline_favorite_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageViewTests"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="@dimen/MCardMargin_16dp"
                        android:layout_marginTop="@dimen/MCardMargin__8dp"
                        android:layout_marginEnd="@dimen/MCardMargin_16dp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/eng_test"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/learning_together_button"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="@dimen/Ops_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/MCardMargin_16dp"
                        android:layout_marginTop="@dimen/MCardMargin__8dp"
                        android:layout_marginEnd="@dimen/MCardMargin_16dp"
                        android:layout_marginBottom="@dimen/MCardMargin__8dp"
                        android:clickable="false"
                        android:contentDescription="@string/favorite_tests"
                        android:text="@string/favorite_tests"
                        android:textColor="@color/example_middle"
                        android:textSize="@dimen/default_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageViewTests"
                        app:strokeColor="@color/color_white"
                        app:strokeWidth="@dimen/MCard_Stroke_1dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>

