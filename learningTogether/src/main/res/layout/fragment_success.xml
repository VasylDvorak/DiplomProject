<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/example_back"
    tools:context=".ui.SuccessFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/MCardMargin_16dp"
        android:layout_marginTop="@dimen/MCardMargin_16dp"
        android:layout_marginEnd="@dimen/MCardMargin_16dp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/example"
        app:strokeWidth="@dimen/MCard_Stroke_1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/MCardMargin_32dp"
                android:layout_marginEnd="@dimen/MCardMargin_16dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/victory_finish"
                android:textColor="@color/example_middle"
                android:textSize="@dimen/MCard_Text_34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/total_tasks_text_view"
                android:layout_width="@dimen/Ops_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/MCardMargin_50dp"
                android:layout_marginEnd="@dimen/MCardMargin_16dp"
                android:gravity="center"
                android:hint="@string/total_tasks"
                android:textColor="@color/example"
                android:textSize="@dimen/MCard_Text_20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/positive_answers_text_view"
                android:layout_width="@dimen/Ops_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/MCardMargin_16dp"
                android:layout_marginEnd="@dimen/MCardMargin_16dp"
                android:gravity="center"
                android:hint="@string/positive_answers"
                android:textColor="@color/example"
                android:textSize="@dimen/MCard_Text_20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_tasks_text_view" />

            <TextView
                android:id="@+id/negative_answers_text_view"
                android:layout_width="@dimen/Ops_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/MCardMargin_16dp"
                android:layout_marginEnd="@dimen/MCardMargin_16dp"
                android:gravity="center"
                android:hint="@string/negative_answers"
                android:textColor="@color/example"
                android:textSize="@dimen/MCard_Text_20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/positive_answers_text_view" />

            <TextView
                android:id="@+id/material_assimilated_text_view"
                android:layout_width="@dimen/Ops_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/MCardMargin_16dp"
                android:layout_marginEnd="@dimen/MCardMargin_16dp"
                android:gravity="center"
                android:hint="@string/material_assimilated"
                android:textColor="@color/pastel_hot_pink"
                android:textSize="@dimen/MCard_Text_20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/negative_answers_text_view" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tests_button"
                android:layout_width="@dimen/Ops_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/MCardMargin_50dp"
                android:layout_marginEnd="@dimen/MCardMargin_16dp"
                android:fontFamily="sans-serif"
                android:contentDescription="@string/back_tests"
                android:text="@string/back_tests"
                android:textColor="@color/example_middle"
                app:backgroundTint="@color/white"
                app:cornerRadius="@dimen/MCard_Radius_15dp"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/material_assimilated_text_view"
                app:strokeColor="@color/example"
                app:strokeWidth="@dimen/MCard_Stroke_1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/main_menu_button"
                android:layout_width="@dimen/Ops_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/MCardMargin_16dp"
                android:layout_marginEnd="@dimen/MCardMargin_16dp"
                android:layout_marginBottom="@dimen/MCardMargin_32dp"
                android:fontFamily="sans-serif"
                android:contentDescription="@string/start_fragment"
                android:text="@string/start_fragment"
                android:textColor="@color/example_middle"
                app:backgroundTint="@color/white"
                app:cornerRadius="@dimen/MCard_Radius_15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/tests_button"
                app:strokeColor="@color/example"
                app:strokeWidth="@dimen/MCard_Stroke_1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/chart_button"
                android:layout_width="@dimen/Ops_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/MCardMargin_16dp"
                android:layout_marginTop="@dimen/MCardMargin_16dp"
                android:layout_marginEnd="@dimen/MCardMargin_16dp"
                android:fontFamily="sans-serif"
                android:contentDescription="@string/chart_grade"
                android:text="@string/chart_grade"
                android:textColor="@color/example_middle"
                android:visibility="gone"
                app:backgroundTint="@color/white"
                app:cornerRadius="@dimen/MCard_Radius_15dp"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/main_menu_button"
                app:strokeColor="@color/example"
                app:strokeWidth="@dimen/MCard_Stroke_1dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>